{
  "displayName": "My Awesome Electron App",
  "name": "my-awesome-electron-app",
  "description": "Your awesome app description",
  "version": "3.0.0",
  "main": "./node_modules/.dev/main/index.js",
  "resources": "src/resources",
  "author": {
    "name": "Dalton Menezes",
    "email": "daltonmenezes@outlook.com"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron-vite preview",
    "predev": "run-s clean:dev",
    "dev": "cross-env NODE_ENV=development electron-vite dev --watch",
    "compile:app": "electron-vite build",
    "compile:packageJSON": "tsx ./src/shared/lib/electron-app/release/modules/prebuild.ts",
    "prebuild": "run-s clean:dev compile:app compile:packageJSON",
    "build": "./node_modules/.bin/electron-builder",
    "postinstall": "run-s prebuild install:deps",
    "install:deps": "electron-builder install-app-deps",
    "make:release": "tsx ./src/shared/lib/electron-app/release/modules/release.ts",
    "release": "electron-builder --publish always",
    "prepare": "husky install",
    "clean:dev": "rimraf ./node_modules/.dev"
  },
  "dependencies": {
    "electron-router-dom": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@tailwindcss/vite": "^4.0.9",
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.4",
    "cross-env": "^7.0.3",
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8",
    "electron-extension-installer": "^1.2.0",
    "electron-vite": "^3.0.0",
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5",
    "open": "8.4.2",
    "rimraf": "^6.0.1",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "semver": "^7.5.4",
    "tailwindcss": "^4.0.9",
    "tsx": "^4.19.3",
    "typescript": "^5.1.6",
    "vite": "^6.2.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "biome check --apply --organize-imports-enabled=false --no-errors-on-unmatched",
      "biome lint --apply --no-errors-on-unmatched"
    ]
  },
  "pnpm": {
    "onlyBuiltDependenciesFile": "./trusted-dependencies-scripts.json"
  }
}
